<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{ ansible_hostname }}</title>
    <style>
      body{font-family:system-ui,Arial,sans-serif;margin:3rem}
      .card{padding:2rem;border:1px solid #ddd;border-radius:12px;max-width:600px}
      h1{margin:0 0 .5rem 0}
      .muted{color:#666}
    </style>
  </head>
  <body>
    <div class="card">
      <h1>Tere tulemast!</h1>
      <h2>{{ ansible_hostname }}</h2>
      <p class="muted">Primary IP: {{ ansible_default_ipv4.address | default('N/A') }}</p>
      <p class="muted">Generated by Ansible on {{ ansible_date_time.date }} {{ ansible_date_time.time }}</p>
    </div>
  </body>
</html>
